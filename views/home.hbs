    <div class="col-sm-4">
      <form id="loginForm">
        <div class="form-group row">
          <label for="username" class="col-sm-2 col-form-label">Username:</label>
          <div class="col-sm-10">
            <input name="username" type="text" class="form-control" id="username">
            <P id="usernameMsg">&nbsp;</P>
