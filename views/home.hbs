            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="role" id="role2" value="2">
              <label class="form-check-label" for="inlineRadio2">校友</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="role" id="role3" value="3">
              <label class="form-check-label" for="inlineRadio2">管理员</label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <button id="loginBtn" type="button" class="col-sm-12 btn btn-outline-success">Sign In</button>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <button id="registerBtn" type="button" class="col-sm-12 btn btn-outline-primary">Sign Up</button>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <button id="githubBtn" type="button" class="col-sm-12 btn btn-outline-dark">Github Sign In</button>
          </div>
        </div>
      </form>
