        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">更多新闻>></a>
        </li>
      </ul>
      <div class="tab-content" id="majorNews">
        <div class="tab-pane fade show active" id="type1" aria-labelledby="home-tab">
          {{#each list.type1 as |item|}}
          <a href="/newsPreview?id={{item.id}}" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">{{item.title}}</h5>
              <small>{{item.date}}</small>
            </div>
            <small>{{typeFormat item.type}}</small>
          </a>
          {{/each}}
        </div>
        <div class="tab-pane fade" id="type2" aria-labelledby="profile-tab">
          {{#each list.type2 as |item|}}
          <a href="/newsPreview?id={{item.id}}" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">{{item.title}}</h5>
              <small>{{item.date}}</small>
            </div>
            <small>{{typeFormat item.type}}</small>
          </a>
          {{/each}}
        </div>
        <div class="tab-pane fade" id="type3" aria-labelledby="contact-tab">
          {{#each list.type3 as |item|}}
          <a href="/newsPreview?id={{item.id}}" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">{{item.title}}</h5>
              <small>{{item.date}}</small>
            </div>
            <small>{{typeFormat item.type}}</small>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <div class="row" style="margin: 16px;">
