<a class="btn btn-outline-info float-right" data-toggle="collapse" href="#newsCreator" role="button" aria-expanded="false" aria-controls="collapseExample">
    添加基本内容
</a>
<div class="collapse float-right col-sm-12" id="newsCreator">
  <div class="card card-body">
      <form id="newsfm">
            <div class="form-group">
              <label for="newsTitle">标题:</label>
              <input type="text" class="form-control" id="newsTitle" name="title">
              <small id="titleMsg" class="form-text">&nbsp;</small>
            </div>
            
            <div class="form-group">
              <label for="editordata">内容:</label>
      
              <textarea class="form-control" id="content" name="editordata"></textarea>
              
              <small id="titleMsg" class="form-text">&nbsp;</small>
            </div>
            <button id="createNewsBtn" type="button" class="float-right col-sm-2 btn btn-outline-success">添加</button>
      </form>


  </div>
</div>

<div>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col" style="width: 100px;">#标题</th>
            <th scope="col">内容</th>
            <th scope="col" style="width: 100px;">状态</th>
            <th scope="col">处理</th>
          </tr>
        </thead>
        <tbody>
            {{#each list as |item|}}
              <tr class="newsItem">
                <td style="width: 100px;">{{{item.k_title}}}</td>
                
                <td>{{{item.k_content}}}</td>
                {{#if k_status}}
                {{#compare k_status 1}}
                <td>已公布</td>
                {{!-- <td>{{{item.k_status}}}</td> --}}
                {{/compare}}
                {{#compare k_status 0}}
                <td>审核中</td>
                {{!-- <td>{{{item.k_status}}}</td> --}}
                {{/compare}}
                {{/if}}
                <td style="width: 150px;">
                  
                  <a title="编辑" href="/administor/editNews?id={{item.k_id}}"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></a>
                  <a title="公布" href="/administor/publish?id={{item.k_id}}"><i class="fa fa-bullhorn fa-lg" aria-hidden="true"></i></a>
                  <a title="禁用" href="/administor/ban?id={{item.k_id}}"><i class="fa fa-ban fa-lg" aria-hidden="true"></i></a>
                </td>
              </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $('.view-tab').removeClass('active');
    $('#news-tab').addClass('active');
    
</script>
