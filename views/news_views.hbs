<a class="btn btn-outline-info float-right" data-toggle="collapse" href="#newsCreator" role="button" aria-expanded="false" aria-controls="collapseExample">
    创建新闻公告
</a>
<div class="collapse float-right col-sm-12" id="newsCreator">
  <div class="card card-body">
      <form id="newsfm">
            <div class="form-group">
              <label for="newsTitle">Title:</label>
              <input type="text" class="form-control" id="newsTitle" name="title">
              <small id="titleMsg" class="form-text">&nbsp;</small>
            </div>
            <div class="form-group">
                <label for="type">Type:</label>
                <select class="form-control" id="type" name="type">
                  <option value="1">师大要闻</option>
                  <option value="2">通知公告</option>
                  <option value="3">学术报告</option>
                </select>
                <small id="codeMsg" class="form-text">&nbsp;</small>
            </div>
            <button id="createNewsBtn" type="button" class="float-right col-sm-2 btn btn-outline-success">Create</button>
      </form>
  </div>
</div>

<div>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#Title</th>
            <th scope="col">Datetime</th>
            <th scope="col">Type</th>
            <th scope="col">Status</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
            {{#each list as |item|}}
              <tr class="newsItem">
                <td>{{item.title}}</td>
                <td>{{item.date}}</td>
                <td>{{typeFormat item.type}}</td>
                <td class="newsStatus {{item.status}}">
                  {{statusFormat item.status}}
                </td>
                <td>
                  <a title="预览" href="/newsPreview?id={{item.id}}"><i class="fa fa-eye fa-lg"></i></a>
                  <a title="编辑" href="/administor/editNews?id={{item.id}}"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></a>
                  <a title="出版" href="/administor/publish?id={{item.id}}"><i class="fa fa-bullhorn fa-lg" aria-hidden="true"></i></a>
                  <a title="禁用" href="/administor/ban?id={{item.id}}"><i class="fa fa-ban fa-lg" aria-hidden="true"></i></a>
                </td>
              </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $('.view-tab').removeClass('active');
    $('#news-tab').addClass('active');
</script>